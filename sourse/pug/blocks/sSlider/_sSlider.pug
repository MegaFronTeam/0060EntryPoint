mixin sSlider(title, text)
	// start sSlider
	+b.SECTION.sSlider.section#sSlider&attributes(attributes)
		.container
			.section-wrap
				.section-title.text-center
					h4=title
					p=text
				+defSlider
					- for (var i = 1; i <= 15; i++)
						+e.slide.swiper-slide(data-fancybox='modal-slider-bottom' data-src=`img/st-review-${i}.png`): +img(`img/st-review-${i}.png`).res-i